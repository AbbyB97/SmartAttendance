<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="5dp"
    android:padding="5dp"
    app:cardBackgroundColor="#546E7A"
    app:cardCornerRadius="5dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/c_iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/cardview_light_background"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/c_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/c_iv"
            android:layout_margin="5dp"
            android:background="@drawable/round_corner_shape"
            android:backgroundTint="#217678"
            android:ellipsize="end"
            android:fontFamily="sans-serif-condensed0"
            android:maxLines="1"
            android:padding="3dp"
            android:text="Name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@android:color/background_light"
            android:textStyle="bold"/>

        <RadioGroup
            android:id="@+id/Attendance_rb_grp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/c_name"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/Present_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="#7d2e7d32"
                android:buttonTint="@android:color/background_light"
                android:paddingRight="3dp"
                android:text="P"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>

            <RadioButton
                android:id="@+id/Absent_rb"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/round_corner_shape"
                android:backgroundTint="#7dc62828"
                android:buttonTint="@android:color/background_light"
                android:paddingRight="3dp"
                android:text="A"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textStyle="bold"/>
        </RadioGroup>
    </RelativeLayout>


</android.support.v7.widget.CardView>