<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="dbtindia.co.in.smartattendance.StudentSummery">

    <android.support.v7.widget.Toolbar
        android:id="@+id/dash_tb"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        app:title="STUDENT SUMMERY"
        app:titleTextColor="@color/cardview_light_background">
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/thesis_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dash_tb"
        tools:listitem="@layout/row_thesis_detail"/>

    <dbtindia.co.in.smartattendance.UI.ProgressWheel
        android:id="@+id/progressWheel"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:matProg_barColor="@color/colorAccent"
        app:matProg_barWidth="8dp"
        app:matProg_circleRadius="100dp"/>

</RelativeLayout>
